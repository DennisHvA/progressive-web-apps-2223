{{>header}}
<main class="details">
    <section>
        <section>
            <img src={{image}} alt={{name}}/>
        </section>
        <h1>{{name}}</h1>
        <h2>Nutriments per 100g</h2>
        <ul>
            <li>Calories: {{calories}}kcal</li>
            <li>Caffeine: {{caffeine}}mg</li>
            <li>Carbohydrates: {{carbohydrates}}g</li>
            <li>Fat: {{fat}}g</li>
            <li>Fibers: {{fibers}}g</li>
            <li>Proteins: {{proteins}}g</li>
            <li>Salts: {{salts}}g</li>
            <li>Sugars: {{sugars}}g</li>
        </ul>
    </section>
</main>