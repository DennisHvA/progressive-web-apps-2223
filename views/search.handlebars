{{>header}}
<main>
    <h1>Producten</h1>

        <form action="/search" method="GET">
            <input type="text" name="search" placeholder="Zoek ..."/>
            <input type="submit" value="Zoek" />
        </form>
    <section id="search">
        {{#each data}}
        <a href="details/{{this._id}}">
            <section>
                <img src="{{this.image_url}}" alt="">
                <h2>{{this.product_name}}</h2>
            </section>
        </a>

            {{else}}
            <p class="empty">Foutje</p>
        {{/each}}
    </section>
</main>